@model CategoryCrudMVC.Models.FieldClass
@{
    ViewBag.Title = "Create";
}

<h2>Enter Category And Items</h2>




@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{
    @Html.ValidationSummary()

    <table height="180px" width="100px">
        <tr>
            <td>
                @Html.LabelFor(x => x.categoryName, "CATEGORY")
            </td>

            <td>
                @Html.TextBoxFor(x => x.categoryName)


            </td>
        </tr>
        <br />
        <td>
            @Html.LabelFor(x => x.itemName, "ITEM")
        </td>
        <td>
            @Html.TextBoxFor(x => x.itemName)
        </td>
        <br />
        <tr>
            <td>


                @Html.LabelFor(x => x.itemDescription, "DESCRIPTION")
            </td>
            <td>
                @Html.TextBoxFor(x => x.itemDescription)
            </td>
        </tr>
    </table>

    <button type="submit" class="btn btn-primary" onclick="window.location= '@Url.Action( "Create", "Home")'">Submit</button>


}
